<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nt.nothing.mapper.OrderMapper">
    <insert id="addOrder">
        insert into `order`(uid, user_id, amount, time, state)
        values (#{uid},#{userId},#{amount},#{time},#{state})
    </insert>

    <update id="updateOrderState">
        update `order` set state = 1
        where uid = #{tradeNo}
    </update>

    <select id="getUserIdByUid" resultType="java.lang.Integer">
        select `order`.user_id from `order`
        where uid = #{tradeNo}
    </select>
</mapper>