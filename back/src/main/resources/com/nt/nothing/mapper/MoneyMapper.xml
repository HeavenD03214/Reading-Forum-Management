<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nt.nothing.mapper.MoneyMapper">

    <insert id="addUser">
        insert into money(user_id, balance)values (#{user_id},#{balance})
    </insert>
    <update id="update">
        update money set balance = #{balance}
        where user_id = #{id}
    </update>
    <delete id="deleteByUserId">
        delete from money
        where user_id  = #{id}
    </delete>
    <select id="getBalanceById" resultType="java.lang.Double">
        select money.balance from money where user_id = #{id}
    </select>

</mapper>